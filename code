#include <iostream>
using namespace std;

int main() {
    int kode;

    cout << "Masukkan kode 3 digit: ";
    cin >> kode;

    // Cek apakah kode valid (3 digit)
    if (kode >= 100 && kode <= 999) {
        int satuan = kode % 10;
        int puluhan = (kode / 10) % 10;
        int ratusan = kode / 100;
        int jumlah = satuan + puluhan + ratusan;

        cout << "Jumlah digit: " << jumlah << endl;
    } else {
        cout << "Kode Salah!" << endl;
    }

    return 0;
}

