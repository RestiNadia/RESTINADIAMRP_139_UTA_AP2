#include <iostream>
using namespace std;

int main() {
    string nama, nim;
    int nilai1, nilai2, nilai3;

    // Input data mahasiswa
    cout << "Nama Mahasiswa: ";
    getline(cin, nama);
    cout << "NIM: ";
    cin >> nim;

    // Input nilai 3 mata kuliah
    cout << "Nilai Mata Kuliah\n";
    cout << "Algoritma dan Pemrograman: ";
    cin >> nilai1;
    cout << "Probabilitas dan Statistika: ";
    cin >> nilai2;
    cout << "Sistem Operasi: ";
    cin >> nilai3;

    // Cek kelulusan per mata kuliah
    cout << endl;
    cout << "Algoritma dan Pemrograman: " << (nilai1 >= 60 ? "Lulus." : "Tidak Lulus. Silakan Ulangi di Tahun Depan!") << endl;
    cout << "Probabilitas dan Statistika: " << (nilai2 >= 60 ? "Lulus." : "Tidak Lulus. Silakan Ulangi di Tahun Depan!") << endl;
    cout << "Sistem Operasi: " << (nilai3 >= 60 ? "Lulus." : "Tidak Lulus. Silakan Ulangi di Tahun Depan!") << endl;

    // Hitung rata-rata
    float rata2 = (nilai1 + nilai2 + nilai3) / 3.0;
    cout << "\nNilai Rata-rata Semester ini: " << rata2 << endl;

    return 0;
}

