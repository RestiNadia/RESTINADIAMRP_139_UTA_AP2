#include <iostream>
#include <string>
using namespace std;

int main() {
    string daftarBuku;
    int jumlah = 0;
    int i = 0;

    cout << "Masukkan daftar judul buku: ";
    getline(cin, daftarBuku); // input string bisa mengandung spasi

    // Hilangkan spasi berlebih di awal (optional)
    while (i < daftarBuku.length() && daftarBuku[i] == ' ') {
        i++;
    }

    // Perulangan dengan while untuk menghitung jumlah kata
    while (i < daftarBuku.length()) {
        // Lewati huruf/kata
        while (i < daftarBuku.length() && daftarBuku[i] != ' ') {
            i++;
        }
        jumlah++;

        // Lewati spasi antar kata (jika ada spasi berlebih tetap akan dilewati)
        while (i < daftarBuku.length() && daftarBuku[i] == ' ') {
            i++;
        }
    }

    cout << "Jumlah judul buku: " << jumlah << endl;

    return 0;
}
